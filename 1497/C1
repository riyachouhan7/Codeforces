By riyachouhan_, contest: Codeforces Round #708 (Div. 2), problem: (C1) k-LCM (easy version), Accepted, #, Copy
#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define endl '\n'
int main()
{
    int t;cin>>t;
    while(t--){
        int n,k;cin>>n>>k;
        if(n%2!=0){
            cout<<n/2<<" "<<n/2<<" "<<"1"<<endl;
        }
        else if(n%4==0){
            cout<<n/2<<" "<<n/4<<" "<<n/4<<endl;
        }
        else{
            cout<<(n/2-1)<<" "<<(n/2-1)<<" "<<2<<endl;
        }
    }
    return 0;
}
